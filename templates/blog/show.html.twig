{% extends 'base.html.twig' %}

{% block title %}
  Blog
{% endblock %}

{% block body %}
  <h1>
    {{ blog.title }}
  </h1>

  <div class="blog-body">
    {{ blog.body|raw }}
  </div>

  <a href="{{ path('blog_index') }}" class="button">back to list</a>

  <a href="{{
    path(
      'blog_edit',
      {
        id: blog.id
      }
    )
    }}"
    class="button">
    edit
  </a>

  {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
