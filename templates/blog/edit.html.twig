{% extends 'base.html.twig' %}

{% block title %}
  Edit Blog
{% endblock %}

{% block body %}
  {% if app.user is not null %}
    <h1>
      Edit Blog -
      {{ blog.title }}
    </h1>
    {{ include(
      'blog/_form.html.twig',
      {
        button_label: 'Update'
      }
    ) }}
    <a href="{{ path('blog_index') }}" class="button">back to list</a>
    {{ include('blog/_delete_form.html.twig') }}
  {% else %}
    {{ include('403.html.twig') }}
  {% endif %}
{% endblock %}
