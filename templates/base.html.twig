<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<title>
			{% block title %}
				Welcome to My Blog!
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		<!-- Main Content -->
		<main>
			Main

			<!-- Header -->
			<header>
				<div class="float-left">
					<h1>
						My Blog
					</h1>
					Header
				</div>

				<div class="login-menu float-right">
					{% if is_granted('ROLE_USER') %}
						<div>
							<a href="{{ path('logout') }}" class="button">Logout</a>
						</div>
					{% else %}
						<div>
							<a href="{{ path('login') }}" class="button">Login</a>
							<a href="{{ path('app_register') }}" class="button">Register</a>
						</div>
					{% endif %}
				</div>
			</header>

			<!-- Navigation -->
			<section class="nav">
				Hero
				<nav>
					<ul class="menu dropdown">
						<li>
							<a href="{{ path('home') }}">Home</a>
						</li>
						<li>
							<a href="{{ path('blog_index') }}">Blogs</a>
							<ul class="menu">
								<li>
									<a href="{{ path('blog_new') }}">Create new blog</a>
								</li>
							</ul>
						</li>
						<li>
							<a href="{{ path('tag_index') }}">Tags</a>
						</li>
					</ul>
				</nav>
			</section>

			<div class="container wrapper">
				<!-- Content -->
				<section class="content">
					Content
					{% block body %}{% endblock %}
				</section>

				<!-- Sidebar -->
				<aside class="sidebar">
					Sidebar
				</aside>
			</div>
			<!-- Footer -->
			<footer>
				<div class="footer-copyright text-center">
					Copyright @{{ 'now' | date('Y') }}
				</div>
			</footer>
		</main>
	</body>
</html>
